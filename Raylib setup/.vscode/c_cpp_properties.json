{
    "configurations": [
        {
            "name": "x64",
            "includePath": [
                "${workspaceFolder}/**",                        // Include all files in the workspace folder
                "C:/raylib/raylib/src/**"                        // Include Raylib header files
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE",
                "GRAPHICS_API_OPENGL_33",
                "PLATFORM_DESKTOP"
            ],
            "compilerPath": "C:/raylib/w64devkit/bin/gcc.exe",    // Path to the MinGW GCC compiler
            "cStandard": "c99",
            "cppStandard": "c++14",
            "intelliSenseMode": "gcc-x64",
            "configurationProvider": "ms-vscode.makefile-tools"
        }
    ],
    "version": 4
}
